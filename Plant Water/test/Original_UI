import dash
from dash import html, dcc, dash_table, Input, Output, State, callback_context
import plotly.graph_objs as go
import pandas as pd
import numpy as np
from datetime import datetime, timedelta
import serial
import threading
import time
from collections import deque
import statistics
import random

DEMO_MODE = False  
SERIAL_PORT = "COM3" 
BAUD_RATE = 9600

data_rows = []
event_records = []
slope_buffer = deque(maxlen=12)
ser = None

# 1. Pre-filled data
data_rows.append({
    "timestamp": datetime.now().strftime("%H:%M:%S"),
    "full_time": datetime.now(),
    "temp": 0, "hum": 0, "light": 0, "soil": 0,
    "status": "Waiting...", "slope": 0, "eta": -1, "health": 0,
    "smart_msg": "System Initializing...", "mood_state": "Happy"
})

# ==========================================
# 2. Smart logic functions
# ==========================================
def get_smart_advice(soil, light, status, eta):
    current_hour = datetime.now().hour
    is_night = light < 100 or (current_hour >= 22 or current_hour < 7)
    if soil < 0.20: return "CRITICAL: Water NOW! ü©∏", "Critical"
    if soil < 0.40 or (eta > 0 and eta < 24):
        if is_night: return "Wait until morning üåô", "Sleepy"
        else: return "Time to water! üíß", "Thirsty"
    if soil > 0.90: return "Fully Hydrated üåä", "Happy"
    if is_night: return "Plantie is sleeping üí§", "Sleepy"
    return "Plantie is growing üå±", "Happy"

def calculate_health_score(soil, temp, light):
    score = 100
    if soil < 0.2 or soil > 0.95: score -= 20
    elif soil < 0.4: score -= 10
    if temp < 15 or temp > 32: score -= 20
    return max(0, score)

# ==========================================
# 3. Serial Reading Thread
# ==========================================
def read_serial_thread():
    global ser, data_rows, event_records, slope_buffer
    print(f"[System] Connecting to {SERIAL_PORT}...")
    while True:
        try:
            if ser is None or not ser.is_open:
                try:
                    ser = serial.Serial(SERIAL_PORT, BAUD_RATE, timeout=1)
                    print(f"[System] Connected ‚úÖ")
                except:
                    time.sleep(2)
                    continue

            if ser.in_waiting:
                line = ser.readline().decode("utf-8", errors="ignore").strip()
                if not line: continue
                parts = line.split(",")
                if len(parts) != 9: continue
                try: float(parts[1]) 
                except: continue

                now = datetime.now()
                _, T_str, RH_str, light_str, soil_str, status, slope_str, eta_str, health_str = parts

                raw_slope = float(slope_str)
                s_val = float(soil_str)
                l_val = int(float(light_str))
                
                slope_buffer.append(raw_slope)
                avg_slope = statistics.mean(slope_buffer) if len(slope_buffer) > 0 else 0
                
                if avg_slope < -0.0005: smooth_eta = (s_val - 0.25) / abs(avg_slope)
                else: smooth_eta = -1

                smart_msg, mood_state = get_smart_advice(s_val, l_val, status, smooth_eta)
                health = calculate_health_score(s_val, float(T_str), l_val)

                row = {
                    "timestamp": now.strftime("%H:%M:%S"), "full_time": now,
                    "temp": float(T_str), "hum": float(RH_str), "light": l_val, "soil": s_val,
                    "status": status, "slope": avg_slope, "eta": smooth_eta, 
                    "health": health, "smart_msg": smart_msg, "mood_state": mood_state
                }
                data_rows.append(row)
                if len(data_rows) > 8000: data_rows.pop(0)

                if mood_state in ["Thirsty", "Critical"] and (not event_records or event_records[-1]["msg"] != smart_msg):
                     event_records.insert(0, {"time": now.strftime("%H:%M"), "msg": smart_msg})
                if len(event_records) > 20: event_records.pop()
        except:
            time.sleep(1)

if not DEMO_MODE:
    t = threading.Thread(target=read_serial_thread, daemon=True)
    t.start()

