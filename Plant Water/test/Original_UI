# ==========================================
# 6. Callbacks
# ==========================================

# Callback 1: Specifically handles button clicks and updates the state in the Store.
@app.callback(Output('window-store', 'data'), [Input('btn-6h', 'n_clicks'), Input('btn-12h', 'n_clicks'), Input('btn-24h', 'n_clicks')], [State('window-store', 'data')])
def update_window_store(btn6, btn12, btn24, current_val):
    ctx = callback_context
    if not ctx.triggered: return current_val
    btn_id = ctx.triggered[0]['prop_id'].split('.')[0]
    if btn_id == "btn-6h": return 6
    elif btn_id == "btn-12h": return 12
    elif btn_id == "btn-24h": return 24
    return current_val

# Callback 2: Update all dynamic components
@app.callback(
    [Output("val-temp", "children"), Output("val-hum", "children"), Output("val-light", "children"),
     Output("light-graph", "figure"), Output("soil-graph", "figure"), 
     Output("water-graph", "figure"), Output("health-graph", "figure"),
     Output("eta-h", "children"), Output("eta-m", "children"),
     Output("health-val", "children"), Output("mood-text", "children"), Output("mood-emoji", "children"),
     Output("log-list", "children"), Output("cal-widget", "children"), Output("raw-data-table", "data"),
     Output("btn-6h", "style"), Output("btn-12h", "style"), Output("btn-24h", "style")], # Âä®ÊÄÅÊõ¥Êñ∞ÊåâÈíÆÊ†∑Âºè
    [Input("interval-fast", "n_intervals"), Input("window-store", "data")] # ÁõëÂê¨ Store ÂèòÂåñ
)
def update_view(n, win_hrs):
    if win_hrs is None: win_hrs = 24

    # Button Styles
    base = {"fontSize":"11px","padding":"6px 12px","background":"transparent","border":"1px solid #555","color":"white","borderRadius":"8px","marginRight":"6px","cursor":"pointer"}
    active = {**base, "background": COLORS["accent"], "border": "none", "fontWeight": "bold"}
    
    s6 = active if win_hrs == 6 else base
    s12 = active if win_hrs == 12 else base
    s24 = active if win_hrs == 24 else base

    if len(data_rows) <= 1:
        e = apply_chart_style(go.Figure())
        return "--", "--", "--", e, e, e, e, "--", "--", "--", "Waiting...", "‚è≥", [], [], [], s6, s12, s24

    latest = data_rows[-1]
    df = pd.DataFrame(data_rows)

    # Soil Graph 
    cutoff = df['full_time'].iloc[-1] - timedelta(hours=win_hrs)
    df_soil = df[df['full_time'] >= cutoff]
    if df_soil.empty: df_soil = df

    fig_soil = go.Figure()
    fig_soil.add_trace(go.Scatter(x=df_soil['full_time'], y=df_soil['soil'], name='Moisture', fill='tozeroy', mode='lines', line=dict(color=COLORS["accent"], width=3), fillcolor=COLORS["chart_fill"]))
    # red Baseline
    fig_soil.add_trace(go.Scatter(x=[df_soil['full_time'].min(), df_soil['full_time'].max()], y=[0.35, 0.35], name='Dry Limit', mode='lines', line=dict(color=COLORS["red_line"], width=2, dash='dash')))
    fig_soil = apply_chart_style(fig_soil)
    fig_soil.update_layout(
        margin=dict(l=30, r=10, t=10, b=30),
        xaxis=dict(visible=True, showgrid=False, color="#666", tickformat="%H:%M"), 
        yaxis=dict(visible=True, showgrid=True, gridcolor='rgba(255,255,255,0.05)', range=[0, 1.05]),
        showlegend=True, legend=dict(x=0, y=1.1, orientation="h", bgcolor='rgba(0,0,0,0)')
    )

    # Light
    fig_light = go.Figure(go.Scatter(x=df.index[-30:], y=df['light'][-30:], fill='tozeroy', line=dict(color="#F59E0B", width=2), fillcolor="rgba(245,158,11,0.1)"))
    fig_light = apply_chart_style(fig_light)

    # Water
    fig_water = go.Figure(go.Bar(x=[1,2,3,4,5,6,7], y=[3,5,2,8,4,6,4], marker_color=['#252630']*3 + [COLORS["accent"]] + ['#252630']*3))
    fig_water = apply_chart_style(fig_water)
    fig_water.update_layout(margin=dict(l=10, r=10, t=10, b=20))

    # Health
    h = int(latest['health'])
    fig_health = go.Figure()
    fig_health.add_trace(go.Pie(values=[h, 100-h], hole=0.9, sort=False, marker_colors=[COLORS["accent"], '#252630'], textinfo='none', hoverinfo='none'))
    fig_health.add_trace(go.Pie(values=[70, 30], hole=0.75, sort=False, marker_colors=['#4f46e5', '#252630'], textinfo='none'))
    fig_health.add_trace(go.Pie(values=[90, 10], hole=0.6, sort=False, marker_colors=['#4338ca', '#252630'], textinfo='none'))
    fig_health = apply_chart_style(fig_health)
    fig_health.update_layout(showlegend=False)

    # Calendar & Logs
    days = ["MON", "TUE", "WED", "THU", "FRI", "SAT", "SUN"]
    cal = []
    for i, d in enumerate(days):
        is_today = (i == datetime.now().weekday())
        s = {"textAlign":"center", "padding":"5px", "borderRadius":"8px", "minWidth": "30px"}
        if is_today: s.update({"background":COLORS["accent"], "color":"white", "boxShadow":f"0 4px 10px {COLORS['accent']}66"})
        else: s.update({"color":"#666"})
        cal.append(html.Div(style=s, children=[html.Div(d, style={"fontSize":"8px"}), html.Div(str((datetime.now()-timedelta(days=datetime.now().weekday()-i)).day), style={"fontSize":"12px", "fontWeight":"bold"})]))

    logs = []
    for ev in event_records[:5]:
        logs.append(html.Div(style={"borderLeft": f"3px solid {COLORS['accent']}", "paddingLeft": "10px", "marginBottom": "10px"}, children=[
            html.Div(ev["msg"], style={"fontWeight":"bold", "fontSize":"13px"}), html.Div(ev["time"], style={"fontSize":"10px", "color": COLORS["text_dim"]})
        ]))

    eta = latest['eta']
    mood_emoji = "üòä"
    if latest['mood_state'] == "Thirsty": mood_emoji = "üò∞"
    elif latest['mood_state'] == "Critical": mood_emoji = "ü•µ"
    elif latest['mood_state'] == "Sleepy": mood_emoji = "üò¥"

    if eta != -1 and eta != float('inf') and eta < 240:
        eta_h, eta_m = f"{int(eta):02d}", f"{int((eta%1)*60):02d}"
    else:
        eta_h, eta_m = "--", "--"

    return (
        f"{latest['temp']:.1f}¬∞", f"{latest['hum']:.0f}%", f"{latest['light']} Lx",
        fig_light, fig_soil, fig_water, fig_health,
        eta_h, eta_m, f"{h}", f'"{latest["smart_msg"]}"', mood_emoji,
        logs, cal, df.sort_values("timestamp", ascending=False).to_dict('records'),
        s6, s12, s24
    )

@app.callback(Output("download-dataframe-csv", "data"), Input("btn-download", "n_clicks"), prevent_initial_call=True)
def download(n): return dcc.send_data_frame(pd.DataFrame(data_rows).to_csv, "plant_data.csv")

if __name__ == "__main__":
    app.run(debug=True, use_reloader=False)